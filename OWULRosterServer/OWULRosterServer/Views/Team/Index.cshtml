@model IEnumerable<OWULRosterServer.Models.TeamModel>

@{
    ViewBag.Title = "Index";
}

<h2>Teams</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Avatar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Wins)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Losses)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ties)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Score)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="vertical-align:middle;">
                @AvatarHelper.AvatarImage(@Html.DisplayFor(model => item.Avatar).ToString())
            </td>
            <td style="vertical-align:middle;">
                @Html.ActionLink(HttpUtility.HtmlDecode(@Html.DisplayFor(modelItem => item.Name).ToString()), "Details", "Team", new { teamId = item.TeamId }, null)
            </td>
            <td style="vertical-align:middle;">
                @Html.DisplayFor(modelItem => item.Wins)
            </td>
            <td style="vertical-align:middle;">
                @Html.DisplayFor(modelItem => item.Losses)
            </td>
            <td style="vertical-align:middle;">
                @Html.DisplayFor(modelItem => item.Ties)
            </td>
            <td style="vertical-align:middle;">
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td style="vertical-align:middle;">
                @Html.ActionLink("Edit", "Edit", new { teamId = item.TeamId }) |
                @Html.ActionLink("Delete", "Delete", new { teamId = item.TeamId })
            </td>
        </tr>
    }

</table>
