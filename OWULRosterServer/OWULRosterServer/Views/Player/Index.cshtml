@model IEnumerable<OWULRosterServer.Models.PlayerModel>

@{
    ViewBag.Title = "Index";
}

<h2>Player Roster</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Avatar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BNetTag)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SkillRating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AverageKills)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AverageDeaths)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AverageAssists)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="vertical-align:middle;">
                @AvatarHelper.AvatarImage(@Html.DisplayFor(model => item.Avatar).ToString())
            </td>
            <td style="vertical-align:middle;">
                @Html.ActionLink(HttpUtility.HtmlDecode(@Html.DisplayFor(modelItem => item.Name).ToString()), "Details", "Player", new { playerId = item.PlayerId }, null)
            </td>
            <td style="vertical-align:middle;">
                @Html.DisplayFor(modelItem => item.BNetTag)
            </td>
            <td style="vertical-align:middle;">
                @if (string.IsNullOrEmpty(string.Empty + @Html.DisplayFor(modelItem => item.TeamName)))
                {
                    @Html.DisplayFor(modelItem => item.TeamName)
                }
                else
                {
                    @Html.ActionLink(HttpUtility.HtmlDecode(@Html.DisplayFor(modelItem => item.TeamName).ToString()), "Details", "Team", new { teamId = item.TeamId }, null)
                }
            </td>
            <td style="vertical-align:middle;">
                @Html.DisplayFor(modelItem => item.SkillRating)
            </td>
            <td style="vertical-align:middle;">
                @Html.DisplayFor(modelItem => item.AverageKills)
            </td>
            <td style="vertical-align:middle;">
                @Html.DisplayFor(modelItem => item.AverageDeaths)
            </td>
            <td style="vertical-align:middle;">
                @Html.DisplayFor(modelItem => item.AverageAssists)
            </td>
            <td style="vertical-align:middle;">
                @Html.ActionLink("Edit", "Edit", new { playerId = item.PlayerId }) |
                @Html.ActionLink("Delete", "Delete", new { playerId = item.PlayerId })
            </td>
        </tr>
    }

</table>
