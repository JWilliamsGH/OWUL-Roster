@helper AvatarImage(string avatarPath)
{
    if (string.IsNullOrEmpty(avatarPath))
    {
        // Use default image
        <img style="height: 30px; width: 30px; float:left; margin-right: 5px" src="~/Content/Images/100px-Default.png" alt="Default Avatar" />
    }
    else
    {
        // Use Avatar image
        <img style="height: 30px; width: 30px; float:left; margin-right: 5px" src=@Href("~/Content/Images/" + avatarPath) alt=@avatarPath />
    }
}
